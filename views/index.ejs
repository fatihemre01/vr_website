    <script>
      //Show a succes message to user after the form submitted

      const feedbackForm = document.getElementById("feedbackForm");
      feedbackForm.addEventListener("submit", async (event) => {
        event.preventDefault();

        const formData = new FormData(feedbackForm);
        const name = formData.get("name");
        const email = formData.get("email");
        const twitter = formData.get("twitter");
        const discord = formData.get("discord");
        const feedback = formData.get("feedback");

        const res = await fetch("/submit-form", {
          method: "POST",
          body: JSON.stringify({ name, email, twitter, discord, feedback }),
          headers: {
            "Content-Type": "application/json",
          },
        });
        const data = await res.json();

        formSuccessMsg.innerText = data.message;

        feedbackForm.reset();

        setTimeout(() => {
          formSuccessMsg.innerText = "";
        }, 5000);
      });

      //Show a succes message to user after subscribed

      const subscribeForm = document.getElementById("subscribeForm");
      subscribeForm.addEventListener("submit", async (event) => {
        event.preventDefault();
        const formData = new FormData(subscribeForm);
        const email = formData.get("email");

        const res = await fetch("/subscribe", {
          method: "POST",
          body: JSON.stringify({ email }),
          headers: {
            "Content-Type": "application/json",
          },
        });
        const data = await res.json();

        email.innerText = "";

        subscribeSuccessMsg.innerText = data.message;

        subscribeForm.reset();

        setTimeout(() => {
          subscribeSuccessMsg.innerText = "";
        }, 5000);
      });
    </script>

